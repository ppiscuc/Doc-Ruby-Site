<h1>Listing docs</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Brief</th>
    <th>Data</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @docs.each do |doc| %>
  <tr>
    <td><%= doc.name %></td>
    <td><%= doc.brief %></td>
    <td><%= doc.data %></td>
    <td><%= link_to 'Show', doc %></td>
    <td><%= link_to 'Edit', edit_doc_path(doc) %></td>
    <td><%= link_to 'Destroy', doc, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

